<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.github.hintofbasil.crabbler.AboutUsFragment">

    <TableLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:onClick="onFragmentInteraction" >

        <TableRow>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/expand"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/about_us_button_size"
                    android:src="@drawable/expand" />

                <ImageView
                    android:id="@+id/contract"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/about_us_button_size"
                    android:visibility="gone"
                    android:src="@drawable/contract" />

            </LinearLayout>

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/about_us_title"
                android:layout_gravity="center_vertical" />

        </TableRow>

        <TableRow>

            <TextView
                android:height="0dp"
                android:layout_width="@dimen/about_us_button_size"/>

            <TextView
                android:id="@+id/content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/about_us_content"
                android:visibility="gone"
                android:paddingRight="@dimen/about_us_text_padding"
                android:paddingEnd="@dimen/about_us_text_padding" />

        </TableRow>

    </TableLayout>

</FrameLayout>
